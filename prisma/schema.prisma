generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Applicants{
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  middleName String?
  phone String
  email String
  cvUrl String
}

model Applicant_Survey{
  id Int @id @default(autoincrement())
  applicantId Int
  question String
  answer String
}